package com.internousdev.ecsite.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import com.internousdev.ecsite.dto.LoginDTO;
import com.internousdev.ecsite.util.DBConnector;

public class LoginDAO {
	private DBConnector db = new DBConnector();
	private Connection con = db.getConnection();
	private LoginDTO dto = new LoginDTO();

	public LoginDTO getLoginUserInfo(String loginUserId, String loginPassword){
		String adminCheckSql = "SELECT admin_id FROM login_user_transaction WHERE login_id = ? AND login_pass = ?";
		String loginSql = "SELECT * FROM login_user_transaction WHERE login_id = ? AND login_pass = ?";

		try{
			PreparedStatement ps1 = con.prepareStatement(adminCheckSql);


			PreparedStatement ps2 = con.prepareStatement(loginSql);

			ps2.setString(1, loginUserId);
			ps2.setString(2, loginPassword);

			ResultSet rs = ps2.executeQuery();

			if(rs.next()){
				//test
				System.out.println(rs.getString("login_id"));
				//test
				dto.setLoginId(rs.getString("login_id"));
				dto.setLoginPassword(rs.getString("login_pass"));
				dto.setUserName(rs.getString("user_name"));

				if(!(rs.getString("login_id").equals(null))){
					dto.setLoginFlg(true);
				}
			}
		}catch(Exception e){
			e.printStackTrace();
		}
		return dto;
	}

	public LoginDTO getLoginDTO(){
		return dto;
	}

}
