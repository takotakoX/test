package test;

import entity.LoginEntity;
import entity.AccountEntity;
import dao.LoginUserAccountDAO;

public class LoginUserAccountDAOTest {
	public static void main(String[] args){
		testUserLogin1();//	ユーザーが見つかる場合
		testUserLogin2();//	ユーザーが見つからない場合
	}

	public static void testUserLogin1(){

		LoginEntity loginEntity = new LoginEntity("taro@gmail.com", "123");
		LoginUserAccountDAO dao = new LoginUserAccountDAO();
		AccountEntity result = dao.UserLogin(loginEntity);

		if(result != null && result.getMail().equals("taro@gmail.com") && result.getPass().equals("123")){
			System.out.println("成功");
		}else{
			System.out.println("失敗");
		}
	}

	public static void testUserLogin2(){

		LoginEntity loginEntity = new LoginEntity("taro@gmail.com", "456");
		LoginUserAccountDAO dao = new LoginUserAccountDAO();
		AccountEntity result = dao.UserLogin(loginEntity);

		if(result == null){
			System.out.println("成功");
		}else{
			System.out.println("失敗");
		}

	}

}
